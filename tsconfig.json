{
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": "./",
		"outDir": "public",
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom", "esnext.asynciterable"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules"]
}
